extends layout

block content
  if categories.length
    h1= title

    form(method="POST" action='' enctype="multipart/form-data")
      div.form-group
        label(for='name') Name: 
        input#name.form-control(type='text', placeholder="Name of part" name='name' required='true' value=(undefined===part ? '' :part.name))
        
      div.form-group
        label(for='image') Image: 
        input#image.form-control(type='file', accept='image/*' name='image' required='true' value=(undefined===part ? '' :part.image))

      div.form-group
        label Category:
        div
          for category in categories
            div(style='display: inline; padding-right:10px;')
              input.checkbox-input(type='checkbox', name='category', required="true" id=category._id, value=category._id, checked=category.checked )
              label(for=category._id) #{category.name}

      div.form-group
        label(for='company') Company Name: 
        input#company.form-control(type='text', placeholder="Company name" name='company' required='true' value=(undefined===part ? '' :part.company))

      div.form-group
        label(for='price') Price: 
        input#price.form-control(type='number', placeholder="Part price" name='price' required='true' value=(undefined===part ? '' :part.price))

      div.form-group
        label(for='sku') SKU: 
        input#sku.form-control(type='text', placeholder="Part SKU" name='sku' required='true' value=(undefined===part ? '' :part.sku))
        input#partid.form-control(type='hidden',name='partid', required='true', value=(undefined===part ? '' :part._id ))

      button.btn.btn-primary(type='submit') Submit

      if errors
      ul
        for error in errors
          li!= error.msg
  else
   h1= "Need to add categories first"
   a(href="/category/create") Add category
