extends layout

block content
  h1= title

  form(method='POST', action='')
    div.form-group
        label(for='name') Category Name:
        input#name.form-control(type='text', placeholder='Brakes, Steering, etc' required="true" name='name' value=(typeof category === 'undefined' ? '' : category.name))
        label(for='description') Category Description:
        input#description.form-control(type="text", placeholder="Description for this category" required="true" name="description" value=(typeof category === 'undefined' ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit

    if errors
    ul
      for error in errors
        li!= error.msg
